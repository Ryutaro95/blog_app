<%= form_with(model: [post, comment]) do |f| %>
  <div class="comment-form-container my-3">
    <div class="list-group list-group-flush">
      <div class="comment-form-text">
        <p style="color: #555;">コメント投稿</p>
        <p>文字数は1〜2000文字以内までです。</p>
      </div>
      <div class="form-group mb-0">
        <%= f.text_area :comment, class: "form-control", id: "input-text", rows: 5 %>
      </div>
    </div>
    <div class="comment-form-btn-counter">
      <%= f.submit "投稿", class: "btn btn-primary btn-comment-post", data: { disable_with: "送信中" } %>
      <p id="counter">0文字</p>
    </div>
  </div>
<% end %>