<div class="follow-btn">
  <% if current_user != user && user_signed_in? %>
    <% if current_user.following?(user) %>
      <%= form_with model: current_user.user_follow_relations.find_by(follow_id: user.id), local: true, html: { method: :delete } do |f| %>
        <%= hidden_field_tag :follow_id, user.id %>
        <%= f.submit 'フォロー解除', class: 'btn btn-danger btn-block' %>
      <% end %>
    <% else %>
      <%= form_with model: current_user.user_follow_relations.build, local: true do |f| %>
        <%= hidden_field_tag :follow_id, user.id %>
        <%= f.submit 'フォロー', class: 'btn btn-primary btn-block' %>
      <% end %>
    <% end %>
  <% end %>
</div>
