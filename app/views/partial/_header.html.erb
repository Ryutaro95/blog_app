<header>
  <nav class="global-nav navbar navbar-expand-lg">
    <div class="container justify-content-between">
        <%= link_to "LOGO", root_path, class: "navbar-brand global-nav-logo" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
  
      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <% if user_signed_in? %>
          <%= link_to new_post_path, class: "btn-outline-light btn" do %>
            <i class='fas fa-pen'></i> 記事投稿
          <% end %>
          <li class="nav-item dropdown">
            <%= link_to current_user.name, "#", class: "nav-link dropdown-toggle text-white", id: "navbarDropdown", data: { toggle: :dropdown, role: :button } %>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">

              <%= link_to "マイページ", user_path(current_user.id), class: ""%>
              <div class="dropdown-divider"></div>
              <%= link_to "ログアウト", destroy_user_session_path, class: "text-danger text-center d-block", method: :delete %>
            </div>
          </li>
          <% else %>
            <li><%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-light h-sign-in-btn" %></li>
            <li><%= link_to "アカウント作成", new_user_registration_path, class: "btn btn-outline-dark h-sign-up-btn" %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>