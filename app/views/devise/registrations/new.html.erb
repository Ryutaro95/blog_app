<div class="sign-up-page d-flex justify-content-center text-center">
  <h2>アカウント作成</h2>
  
  <div class="sign-up-form m-auto">
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, class: "form-control", placeholder: "Your Name"%>
      </div>
    
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "example@email.com" %>
      </div>
    
      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
      </div>
    
      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
      </div>
    
      <div class="actions my-3">
        <%= f.submit "作成", class: "btn btn-dark sign-up-btn" %>
      </div>
    <% end %>
  </div>
  
  <%= render "devise/shared/links" %>
</div>
